    "devDependencies": {
        "babel-cli": "^6.23.0",
        "babel-core": "^6.24.0",
        "babel-plugin-istanbul": "^4.1.1",
        "babel-preset-es2015": "^6.22.0",
        "chai": "^3.5.0",
